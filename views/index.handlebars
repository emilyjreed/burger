<div style="text-align:center" class="container">
    <h1>Eat-Da-Burger!</h1>
    <div class="row">
        <div class="col-lg-6" id="eatBurger">
            <h2>Eat These Burgers:</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}

                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn btn-outline-light eatme" type="submit">Eat Me!</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-lg-6" id="devourBurger">
            <h2>Devoured Burgers:</h2>

            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>

<div style="text-align:center" class="container">
    <div class="row">
        <div class="col-lg-4">

        </div>
        <div class="col-lg-4" id="addBurger">
            <h2>Add a Burger: </h2>

            <form class="create-update-form" action="/api/burgers" method="POST">
                <div class="form-group">
                    <label for="dab">Burger Name:</label>
                    <input type="text" id="dab" name="burger_name">
                </div>
                <button class="btn btn-light submit" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>